<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_253504_Patrebka_23.MainPage">

        <VerticalStackLayout
            Padding="30,0"
            Margin="0,0,0,20"
            Spacing="25"
            VerticalOptions="Center">
            <Image
                Source="yellow_hand.png"
                HeightRequest="300"
                Aspect="AspectFit"
                SemanticProperties.Description="emoji welcoming hand" />

            <Label
                Text="Daniil Patrebka"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="253504, №23"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level3"
                SemanticProperties.Description="Group number" />

            <Button
                x:Name="CounterBtn"
                Text="Agree" 
                SemanticProperties.Hint="Counts the number of times you agree"
                Clicked="OnCounterClicked"/>
        </VerticalStackLayout>

</ContentPage>
